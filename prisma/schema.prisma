//fields of a note instance in my collection.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Note {
  id         String   @id @map("_id") @db.ObjectId // MongoDB ObjectId primary key
  description String   // Description of the note
}

